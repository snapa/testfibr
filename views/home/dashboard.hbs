
{{#if post}}
<div class="row">

<div class="col-sm-12">
    <div class="thumbnail">
      <img src="/images/{{post.img}}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{post.title}}</h3>
        <p>{{post.body}}</p>
        
      </div>
    </div>
  </div>
  </div>
{{else}}
    <h1 class="text-center text-muted" style="opacity:0.4"><b>No Posts</b></h1>
{{/if}}
 
 



